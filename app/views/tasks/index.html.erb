<div class="row">
  <div class="col-md-4">
    <h1>To Do</h1>
     
    <table class="table">
      <thead>
        <tr>
          <th>Content</th>
        
          <th colspan="2"></th>
        </tr>
      </thead>
     
      <tbody>
        <%= render @to_do %>
      </tbody>
    </table>
     
    <br>
   </div>
   
   <div class="col-md-4">
    <h1>Doing</h1>
   
    <table>
      <thead>
        <tr>
          <th>Content</th>
         
          <th colspan="2"></th>
        </tr>
      </thead>
     
      <tbody>
        <%= render @doing %>
      </tbody>
    </table>
     
   
   </div>

  <div class="col-md-4">
    <h1>Done</h1>
     
    <table>
      <thead>
        <tr>
          <th>Content</th>
          
          <th colspan="2"></th>
        </tr>
      </thead>
     
      <tbody>
        <%= render @done %>
      </tbody>
    </table>
   </div>
  <br>
</div>
<div class="row">
<div class="col-md-3">
  <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-block" %>
</div>
</div>